@using Microsoft.AspNetCore.Identity
@using BlazorApp1.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Личный кабинет @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Выйти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="text-decoration: none;
                  color: #FE8427;
                  font-size: 16px;
                  margin-right: 15px;" class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Зарегистрироваться</a>
    </li>
    <li class="nav-item">
        <a style="text-decoration: none;
                  color: #FE8427;
                  font-size: 16px;
                  margin-right: 15px;" class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
    </li>
}
</ul>
