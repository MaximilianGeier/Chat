<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Личный кабинет @context.User.Identity?.Name</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Выйти и зайти нормально</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Зарегистрироваться</a>
        <a href="Identity/Account/Login">Войти</a>
    </NotAuthorized>
</AuthorizeView>